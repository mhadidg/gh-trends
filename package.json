{
  "name": "gh-trending-newsletter",
  "description": "A fully automated weekly newsletter highlighting trending GitHub repos",
  "version": "1.0.0",
  "author": "Mustapha Hadid",
  "license": "MIT",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "clean": "rm -rf dist coverage",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "start": "npm run build && NODE_ENV=production node dist/run.js",
    "dev": "NODE_ENV=development tsx src/run.ts",
    "dev:release:gh": "USE_MOCK_REPOS=false GITHUB_RELEASES_ENABLED=true npm run dev",
    "dev:release:rss": "USE_MOCK_REPOS=false RSS_ENABLED=true npm run dev",
    "preview": "NODE_ENV=development tsx src/preview.ts",
    "preview:live": "USE_MOCK_REPOS=false npm run preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/handlebars": "^4.0.40",
    "dotenv-flow": "^4.1.0",
    "fast-xml-parser": "^5.2.5",
    "franc": "^6.2.0",
    "handlebars": "^4.7.8"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "tests/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
